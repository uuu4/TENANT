APP_NAME="Tenant App"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_VERSION=1.0.0

LOG_CHANNEL=stack
LOG_LEVEL=debug

# PostgreSQL Database
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=tenant_db
DB_USERNAME=tenant_user
DB_PASSWORD=secret

# MongoDB for Logs
MONGODB_URI=mongodb://mongo:27017/tenant_logs

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Queue
QUEUE_CONNECTION=redis

# Session
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Cache
CACHE_DRIVER=redis

# License Configuration
LICENSE_KEY=your-license-key-here
LICENSE_PROVIDER_URL=https://provider.com/api
LICENSE_VALIDATION_ENDPOINT=/license/validate
LICENSE_CACHE_TTL=3600
LICENSE_GRACE_PERIOD_HOURS=72
LICENSE_TIMEOUT=10

# WMS Configuration
WMS_API_URL=https://wms.example.com/api
WMS_API_KEY=your-wms-api-key
WMS_WEBHOOK_SECRET=your-webhook-secret
WMS_SYNC_INTERVAL=5
WMS_BATCH_SIZE=100
WMS_TIMEOUT=30
WMS_RETRY_TIMES=3
WMS_RETRY_DELAY=1000

# Mail (optional)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"
